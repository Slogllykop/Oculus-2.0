{
	"manifest_version": 3,
	"name": "Oculus Screen Share",
	"version": "1.1.1",
	"description": "Simple peer-to-peer screen sharing",
	"permissions": ["tabs", "activeTab", "scripting", "storage"],
	"host_permissions": ["<all_urls>"],
	"action": {
		"default_popup": "index.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"32": "icons/icon32.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"background": {
		"service_worker": "src/background.ts",
		"type": "module"
	},
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"content_security_policy": {
		"extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
	}
}
